<Window x:Class="WpfUI.AutomatedSystemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI"
        mc:Ignorable="d"
        Title="Automated system" Height="450" Width="600" MinHeight="350" MaxHeight="550" Background="AliceBlue" Closing="Window_Closing">
    <Grid>
        <Grid Margin="50, 70, 50, 70">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Width="150" Height="50" Click="EnterTheSystem_Click">Enter the system</Button>
            <Button Grid.Row="1" Width="150" Height="50" Click="Registration_Click">Registration</Button>
            <Button Grid.Row="2" Width="150" Height="50" Click="Exit_Click">Exit</Button>
        </Grid>
    </Grid>
</Window>
